<body>
    <div class="container">
        <%- include("_notLoggedNav.ejs") %>
        <h1>Login</h1>
        <form action="/pages/users/login" method="POST">
            <div class="inputsWrapper">
                <input type="text" id="username" name="username" class="inputs" onfocusout="checkUsername()" maxlength="35">
                <label for="username" class="inputLabel" id="usernameLabel">Username</label>
            </div>
            <div class="inputsWrapper">
                <input type="password" id="password" name="password" class="inputs" onfocusout="checkPassword()">
                <label for="password" class="inputLabel" id="passwordLabel">Password</label>
            </div>
            <button class="submitButton">Login</button>
        </form>
    </div>
    <script>
        function checkUsername(){
            let usernameValue = document.getElementById("username")
            let usernameLabel = document.getElementById("usernameLabel")
            if(usernameValue.value.trim() == ""){
                username.classList.add("outFocus")
            } else{
                usernameLabel.style.top = "2px"
                usernameLabel.style.fontSize = "12px"
            }
        }

        function checkPassword(){
            let usernameValue = document.getElementById("password")
            let usernameLabel = document.getElementById("passwordLabel")
            if(usernameValue.value.trim() == ""){
                username.classList.add("outFocus")
            } else{
                usernameLabel.style.top = "2px"
                usernameLabel.style.fontSize = "12px"
            }
        }
    </script>
</body>
</html>