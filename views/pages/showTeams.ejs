<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Show all teams</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <div class="container">
        <%- include("_navbar.ejs") %>
        <div id="teamsWrapper">
            <% teams.forEach(team => { %>
                <div class="teamCardWrapper">    
                    <a href="/pages/teams/<%= team._id %>/view">
                        <div class="teamCard">
                            <%= team.name %>
                        </div>
                    </a>
                    <form action="/pages/teams/<%= team._id %>/delete" method="POST">
                        <button>Delete</button>
                    </form>
                </div>
            <% }) %>
        </div>
    </div>
</body>
</html>